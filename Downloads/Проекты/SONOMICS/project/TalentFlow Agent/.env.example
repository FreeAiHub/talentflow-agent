# TalentFlow Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# Application Settings
# ================================
APP_NAME=TalentFlow Agent
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# ================================
# API Keys - AI/ML Models
# ================================

# OpenAI (GPT-4, GPT-4o-mini)
OPENAI_API_KEY=sk-...

# Anthropic (Claude 3.5 Sonnet)
ANTHROPIC_API_KEY=sk-ant-...

# Flowise AI
FLOWISE_API_URL=http://localhost:3000
FLOWISE_API_KEY=your-flowise-api-key

# ================================
# Linear Project Management
# ================================
LINEAR_API_KEY=lin_api_...
LINEAR_TEAM_ID=your-team-id
LINEAR_PROJECT_ID=your-project-id

# ================================
# Database Configuration
# ================================

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/talentflow
POSTGRES_USER=talentflow
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=talentflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ================================
# Vector Database
# ================================

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=talentflow-embeddings

# ================================
# Job Portals Credentials
# ================================

# Djinni.co
DJINNI_EMAIL=your-email@example.com
DJINNI_PASSWORD=your-password

# Work.ua
WORKUA_EMAIL=your-email@example.com
WORKUA_PASSWORD=your-password

# LinkedIn
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password
LINKEDIN_API_KEY=optional-api-key

# ================================
# Email Configuration
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@talentflow.ai

# ================================
# Telegram Bot
# ================================
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# ================================
# External Integrations
# ================================

# Calendly
CALENDLY_API_KEY=your-calendly-api-key
CALENDLY_EVENT_TYPE_UUID=your-event-type-uuid

# CRM (optional)
CRM_API_URL=https://your-crm.com/api
CRM_API_KEY=your-crm-api-key

# ================================
# Security & Authentication
# ================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# CORS Settings
# ================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ================================
# Parsing Configuration
# ================================
PARSER_TIMEOUT=30
PARSER_MAX_RETRIES=3
PARSER_DELAY_BETWEEN_REQUESTS=2

# User agents rotation
USER_AGENT_ROTATION=true
USER_AGENTS=Mozilla/5.0 (Windows NT 10.0; Win64; x64),Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)

# ================================
# AI Model Configuration
# ================================
PRIMARY_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL=gpt-4o-mini
EMBEDDINGS_MODEL=text-embedding-3-small
MAX_TOKENS=4096
TEMPERATURE=0.7

# ================================
# Feature Flags
# ================================
ENABLE_LINKEDIN_PARSER=false
ENABLE_AUTO_APPLY=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_ANALYTICS_TRACKING=true

# ================================
# Monitoring & Observability
# ================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=talentflow-agent

# ================================
# Development Settings
# ================================
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=8000
DEV_SERVER_RELOAD=true

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/talentflow_test
PYTEST_TIMEOUT=30
